    <button style=" background: transparent !important" type="submit"><p id="Header" class="animated fadeIn" style="padding: 1%; text-align: center; position: relative; margin-top: 3%"><b>Weather.IO</b></p></button>

</form>

<div ng-app="app">
    <div ng-controller="emp">

        <div id="box" style="width: 90%; margin-top: 4%;">
            <div id="table" >
                <a href="https://www.google.com/search?q={{url}}" style="text-decoration: none;outline: none; color : white;"> <p id="address" style="padding-bottom: 2px;" class="animated fadeIn">{{street}}{{area5}}</p></a>
                <a href="https://www.google.com/search?q={{url}}" style="text-decoration: none;outline : none; color : white;"> <p id="address"  class="animated fadeIn">{{state}}{{country}}</p></a>
                <span ng-if="error==''" class="animated fadeIn" style="margin-bottom: 7%" id="flag"><img src="https://www.countryflags.io/{{country}}/shiny/48.png" onerror="this.style.display='none'"/></span>
                <span ng-click="display()" ng-if="bool=='true'"  ><p class=" temp animated fadeIn">{{tempC}}<span><sup ng-if='tempC!=""' id="deg" >&#8451;</sup></span></p></span>
                <span ng-click="display()" ng-if="bool=='false'"  ><p class="temp animated fadeIn">{{tempF}}<span><sup ng-if='tempF!=""' id="deg" >&#8457;</sup></span></p></span>
            </div>

            <div id="status" class="animated fadeIn" style="width: 29%;" ng-if="summary.length>0">
                <p id="predict_content" class="animated fadeIn" style="font-size: 120%;font-family: 'Andika', sans-serif"><b>Now</b></p>
                <img src="clear-day.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='clear-day'">
                <img src="clear-night.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='clear-night'">
                <img src="cloudy.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='cloudy'">
                <img src="fog.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='fog'">
                <img src="hail.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='hail'">
                <img src="partly-cloudy-day.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='partly-cloudy-day'">
                <img src="partly-cloudy-night.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='partly-cloudy-night'">
                <img src="rain.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi=='rain'">
                <img src="sleet.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi==='sleet'">
                <img src="snow.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi==='snow'">
                <img src="thunderstorm.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi==='thunderstorm'">
                <img src="tornado.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi==='tornado'">
                <img src="wind.svg" style="width:120px;height:120px;" class="animated fadeIn" ng-if="iconi==='wind'">
                <p class="animated fadeIn" style="font-size: 85%;">{{summary}}</p>
            </div>
            <div id="humidity" class="animated fadeInRight" style="margin-right: 10%;" ng-if="humidity!=''">
                <p id="predict_content" class="animated fadeIn" style="font-size: 120%;font-family: 'Andika', sans-serif"><b>Humidity</b></p>
                <div class="animated fadeIn"><img src="humidity.svg" style="width:120px;height:120px;"></div>
                <p class="animated fadeIn" style="font-size: 85%;">{{humidity}}%</p>
            </div>
            <div id="pressure"   style="margin-left: 10%;" class="animated fadeInLeft" ng-if="wind!=''">
                <p id="predict_content" class="animated fadeIn" style="font-size: 120%; font-family: 'Andika', sans-serif"><b>Wind speed</b></p>
                <div class="animated fadeIn"><img src="pressure.svg" style="width:120px;height:120px;" ></div>
                <p class="animated fadeIn" style="font-size: 85%;">{{wind}} km/hr</p>
            </div>
    
           <div id="predict_fore" style="margin : 0 auto; text-align:left; " class="animated fadeInLeft" ng-if="predict.length>0">
                <img src="weather1.svg" class="animated fadeIn" style="width:150px;float:left;height:200px; margin-top: 10px; margin-bottom: 20px; margin-right: 45px; padding-top: 10px;" >
               <p class="animated fadeIn" style="font-size: 35px;padding-left:30px; margin-top: 0px; font-family: 'Andika', sans-serif "><b>Forecast</b></p>
                    <p style="font-size: 20px; margin-top: 10px;">{{predict}}</p>
           </div>
            <p id="error" class="animated fadeIn">{{error}}</p>
        </div>
